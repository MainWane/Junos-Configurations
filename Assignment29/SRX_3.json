/* Assignment 29. Outset for four routers. */
/* By Per Dahlstroem */
version 12.1X47-D15.4;
system {
    host-name SRX_3;
    /* User: root Password: Rootpass */
    root-authentication {
        encrypted-password "$1$4TkbZDtp$6E8C6Bg7K6gnHR31XnJjl0";
    }
}
interfaces {
    ge-0/0/1 {
        unit 0 {
            family inet {
                address 192.168.10.1/24;
            }
        }
    }
    ge-0/0/2 {
        unit 0 {
            family inet {
                address 192.168.11.1/24;
            }
        }
    }
    ge-0/0/3 {
        unit 0 {
            family inet {
                address 10.10.10.1/30;
            }
        }
    }
}
routing-options {
    static {
        route 192.168.12.0/24 next-hop 10.10.10.2;
        route 192.168.13.0/24 next-hop 10.10.10.2;
        route 192.168.3.0/24 next-hop 10.10.10.2;
        route 192.168.4.0/24 next-hop 10.10.10.2;
        route 192.168.5.0/24 next-hop 10.10.10.2;
        route 192.168.6.0/24 next-hop 10.10.10.2;
	route 10.10.12.0/30 next-hop 10.10.10.2;
	route 10.10.18.0/30 next-hop 10.10.10.2;
    }
}
security {
    policies {
        from-zone myTrust_3 to-zone myTrust_3 {
            policy default-permit {
                match {
                    source-address any;
                    destination-address any;
                    application any;
                }
                then {
                    permit;
                }
            }
        }
    }
    zones {
        security-zone myTrust_3 {
            interfaces {
                ge-0/0/1.0;
                ge-0/0/2.0;
                ge-0/0/3.0;
            }
            host-inbound-traffic {
                system-services {
                    ping;
                    traceroute;
                }
            }
        }
    }
}
